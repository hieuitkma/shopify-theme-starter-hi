{% schema %}
{
    "name": "feature-brand",
    "settings": [
        {
            "id": "hi-06_header",
            "type": "text",
            "label": "Header",
            "default": "EXPLORE OUR OUTSTANDING FEATURES"
        },
        {
            "id": "hi-06_desc",
            "type": "textarea",
            "label": "Desc",
            "default": "We create category leading brand experiences that have meaning and add a value for our clients."
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "1 feature collection",
            "limit": 5,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "hi-2__img",
                    "label": "Image"
                },
                {
                    "type": "image_picker",
                    "id": "hi-2__img2",
                    "label": "Image"
                },
                {
                    "id": "hi-2__title",
                    "type": "text",
                    "label": "Title"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "hi-feature",
            "name": "feature-brand"
        }
    ]
}
{% endschema %}