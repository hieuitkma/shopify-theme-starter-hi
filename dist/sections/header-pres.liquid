{
    "name": "Header pres",
    "settings": [
        {
            "id": "slide_time_delay",
            "type": "text",
            "label": "Time slide delay (ms)",
            "default": "8000"
        },
        {
            "id": "slide_coverflow",
            "type": "checkbox",
            "label": "Slide CoverFlow Effect",
            "default": false
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "1 feature collection",
            "limit": 5,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "hi-2__img",
                    "label": "Image"
                },
                {
                    "type": "image_picker",
                    "id": "hi-2__img2",
                    "label": "Image"
                },
                {
                    "id": "hi-2__title",
                    "type": "text",
                    "label": "Title"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "hi-feature",
            "name": "header pres"
        }
    ]
}
{% endschema %}