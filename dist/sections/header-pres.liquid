<div class="slide-delay" hidden>{{ section.settings.slide_time_delay }}</div>

{% capture megamenu %}
<div class="mega--menu">
    <div class="col-12">
        <div class="col-6 col-8">
            {% render 'header-sub' %}
        </div>
        <div class="col-6">
            <div class="sub--menu__box">
                <div class="sub--box__item">
                    <div class="sub--box__img">
                        <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/files/nouveau-cartable-collection_370x230@2x.jpg?v=1522429732"
                            alt="">
                    </div>
                    <div class="sub--box__text">
                        <div class="sub--box__brand">Le Nouveau Cartble</div>
                        <div class="sub--box__title">BACK IN STOCK</div>
                    </div>
                </div>
                <div class="sub--box__item">
                    <div class="sub--box__img">
                        <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/files/1_fbfd75be-66c7-45bd-a61c-cc3cf47e3668_370x230@2x.jpg?v=1522110270"
                            alt="">
                    </div>
                    <div class="sub--box__text">
                        <div class="sub--box__brand">Le Grand Sac</div>
                        <div class="sub--box__title">4 COLORS, FROM $350</div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endcapture %}


<div class="container">
    <!-- Header  -->
    <header class="header">
        <div class="top-bar">FREE SHIPPING ON ORDERS OVER $70</div>

        <!-- HEADER -->

        <div class="main-nav">

            <!-- NAV -->
            <div class="nav">

                <!-- NAV-LEFT -->
                <nav class="nav-left">
                    <ul class="nav-left__list">
                        <li class="nav-left__item nav-left__item--dropdown">
                            <a class="nav__link" href="#">SHOP</a>

                            <!-- Nav mega menu of Desktop  -->
                            {{ megamenu }}
                        </li>
                        <li class="nav-left__item">
                            <a class="nav__link" href="#">BLOG</a>
                        </li>
                        <li class="nav-left__item">
                            <a class="nav__link" href="#">ABOUT</a>
                        </li>
                        <li class="nav-left__item">
                            <a class="nav__link" href="#">FAQ</a>
                        </li>
                    </ul>

                    <!-- nav tablet icon  -->
                    {% render 'icon-tablet-left' %}
                </nav>

                <!-- NAV-BRAND  -->
                <div class="nav-logo">
                    <a href="#">
                        <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/files/Logo-white-2x_130x.png?v=1522600599"
                            alt="" class="brand__img--white">
                        <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/files/Logo-black-2x_130x.png?v=1522600583"
                            alt="" class="brand__img--black">
                    </a>
                </div>

                <!-- NAV RIGHT  -->
                <nav class="nav-right">
                    <ul class="nav-right__list">
                        <li class="nav-right__item nav-right--money">
                            <a class="nav__link" href="#">
                                <label for="nav-right__item--click">USD$</label>
                            </a>
                            <label for="nav-right__item--click">
                                <svg class="Icon Icon--select-arrow" role="presentation" viewBox="0 0 19 12">
                                    <polyline fill="none" stroke="currentColor" points="17 2 9.5 10 2 2"
                                        fill-rule="evenodd" stroke-width="2" stroke-linecap="square"></polyline>
                                </svg>
                            </label>

                            <input hidden type="checkbox" name="" id="nav-right__item--click">

                            <div class="nav--right__sub-menu">
                                <ul class="sub--right__list">
                                    <li class="sub--right__item">
                                        <a href="#" class="sub--right__link">CAD $</a>
                                    </li>
                                    <li class="sub--right__item">
                                        <a href="#" class="sub--right__link">EUR €</a>
                                    </li>
                                    <li class="sub--right__item">
                                        <a href="#" class="sub--right__link">JPY ¥</a>
                                    </li>
                                    <li class="sub--right__item">
                                        <a href="#" class="sub--right__link">USD $</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-right__item nav--right__item">
                            <a class="nav__link" href="#">ACCOUNT</a>
                        </li>
                        <li class="nav-right__item nav--right__item">
                            <a class="nav__link" href="#">SEARCH</a>
                        </li>
                        <li class="nav-right__item nav--right__item">
                            <a class="nav__link" href="#">CART (0)</a>
                        </li>
                    </ul>

                    <div class="nav-right__icon">
                        <div class="nav__icon icon__search">
                            <svg class="nav__icon--header" class="Icon Icon--search-desktop" role="presentation"
                                viewBox="0 0 21 21">
                                <g transform="translate(1 1)" stroke="currentColor" stroke-width="2" fill="none"
                                    fill-rule="evenodd" stroke-linecap="square">
                                    <path d="M18 18l-5.7096-5.7096"></path>
                                    <circle cx="7.2" cy="7.2" r="7.2"></circle>
                                </g>
                            </svg>
                        </div>

                        <label for="cart--checked" class="nav__icon icon__cart">
                            <svg class="nav__icon--header" class="Icon Icon--cart-desktop" role="presentation"
                                viewBox="0 0 19 23">
                                <path
                                    d="M0 22.985V5.995L2 6v.03l17-.014v16.968H0zm17-15H2v13h15v-13zm-5-2.882c0-2.04-.493-3.203-2.5-3.203-2 0-2.5 1.164-2.5 3.203v.912H5V4.647C5 1.19 7.274 0 9.5 0 11.517 0 14 1.354 14 4.647v1.368h-2v-.912z"
                                    fill="currentColor"></path>
                            </svg>
                        </label>

                        <input hidden type="checkbox" name="" id="cart--checked">

                        <label class="nav__overlay" for="cart--checked"></label>

                        <div class="cart__tablet">
                            <div class="cart-top">
                                <div class="cart__header">CART</div>
                                <label for="cart--checked" class="cart__close">
                                    <svg class="Icon Icon--close nav__close__icon" role="presentation"
                                        viewBox="0 0 16 14">
                                        <path d="M15 0L1 14m14 0L1 0" stroke="currentColor" fill="none"
                                            fill-rule="evenodd"></path>
                                    </svg>
                                </label>
                            </div>
                            <div class="cart__notify">Spend $70 more and get free shipping! </div>
                            <div class="cart__products">YOUR CART IS EMPTY</div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <!-- SLIDE -->
        {% render 'header-slide' %}
    </header>
</div>


