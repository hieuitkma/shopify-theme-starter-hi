<div class="section-shop section__main">
    <div class="section-shop-content">
        <div class="section__text">
            <div class="section__header">SHOP</div>
            <div class="section__title">OUR LOOKS</div>
        </div>

        <div class="swiper-container">
            <div class="swiper-wrapper">

                <input hidden type="radio" id="male" name="shop" checked>
                <input hidden type="radio" id="female" name="shop">

                <div class="swiper-slide">
                    <div class="shop-inner">
                        <div class="shop-inner-box">
                            <div class="shop-box-left">
                                <div class="shop-box-left__img">
                                    <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/files/Shop-the-look-2_600x.progressive.jpg?v=1522690388"
                                        alt="">
                                    <label for="male"
                                        class="shop-box-left__dot shop-box-left__dot-left shop-box-left__dot--active"></label>
                                    <label for="female"
                                        class="shop-box-left__dot shop-box-left__dot-right"></label>
                                </div>

                            </div>
                            <div class="shop-box-right">
                                <div class="shop-box-right__img">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Petit-Violette-Bois-de-Rose-01_1000x.jpg?v=1570300519 1000w"
                                        alt="">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Petit-Violette-Bois-de-Rose-03_1000x.jpg?v=1570300519 1000w"
                                        alt="">
                                </div>
                                <div class="shop-box-right__img shop-box-right__img-hidden">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Double-Pochette-Bois-de-Rose-01_1000x.jpg?v=1570300801 1000w"
                                        alt="">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Double-Pochette-Bois-de-Rose-03_1000x.jpg?v=1570300801 1000w"
                                        alt="">
                                </div>
                                <div class="shop-box-right__text">
                                    <div class="shop-box-right__title"> LE PETIT VIOLETTE ROSEWOOD</div>
                                    <div class="shop-box-right__price">$290</div>
                                </div>
                                <div class="shop-box-right____btn">
                                    <a href="" class="btn btn--black">VIEW THIS PRODUCT</a>
                                </div>
                                <div class="shop-box-right__dot">
                                    <label for="male"></label>
                                    <label for="female"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="shop-inner">
                        <div class="shop-inner-box">
                            <div class="shop-box-left">
                                <div class="shop-box-left__img">
                                    <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/files/Shop-the-look-1_600x.progressive.jpg?v=1522690339"
                                        alt="">
                                </div>
                            </div>
                            <div class="shop-box-right">
                                <div class="shop-box-right__img">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Grand-Sac-Camel-01_1000x.jpg?v=1570301292 1000w"
                                        alt="">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Grand-Sac-Camel-03_1000x.jpg?v=1570301292 1000w"
                                        alt="">
                                </div>
                                <div class="shop-box-right__text">
                                    <div class="shop-box-right__title">LE GRAND SAC CAMEL</div>
                                    <div class="shop-box-right__price">$350</div>
                                </div>
                                <div class="shop-box-right____btn">
                                    <a href="" class="btn btn--black">VIEW THIS PRODUCT</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <!-- <input type="radio" id="a" name="shop2" checked>
                    <input type="radio" id="b" name="shop2"> -->
                    <div class="shop-inner">
                        <div class="shop-inner-box">
                            <div class="shop-box-left">
                                <div class="shop-box-left__img">
                                    <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/files/Shop-the-look-4_600x.progressive.jpg?v=1522690490"
                                        alt="">
                                </div>
                            </div>
                            <div class="shop-box-right">
                                <div class="shop-box-right__img">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Elegant-Bag-Bordeaux-01_1000x.jpg?v=1570300556 1000w"
                                        alt="">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Elegant-Bag-Bordeaux-03_1000x.jpg?v=1570300556 1000w"
                                        alt="">
                                </div>
                                <div class="shop-box-right__text">
                                    <div class="shop-box-right__title">THE ELEGANT BAG BURGUNDY</div>
                                    <div class="shop-box-right__price">$330</div>
                                </div>
                                <div class="shop-box-right____btn">
                                    <a href="" class="btn btn--black">VIEW THIS PRODUCT</a>
                                </div>
                                <div class="shop-box-right__dot">
                                    <label for="a"></label>
                                    <label for="b"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="shop-inner">
                        <div class="shop-inner-box">
                            <div class="shop-box-left">
                                <div class="shop-box-left__img">
                                    <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/files/Shop-the-look-5_600x.progressive.jpg?v=1522690588"
                                        alt="">
                                </div>
                            </div>
                            <div class="shop-box-right">
                                <div class="shop-box-right__img">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Petit-Sac-Vert-01_1000x.jpg?v=1570300778 1000w"
                                        alt="">
                                    <img src="//cdn.shopify.com/s/files/1/0011/6680/3007/products/Petit-Sac-Vert-03_1000x.jpg?v=1570300778 1000w"
                                        alt="">
                                </div>
                                <div class="shop-box-right__text">
                                    <div class="shop-box-right__title">LE PETIT SAC GREEN</div>
                                    <div class="shop-box-right__price">$190</div>
                                </div>
                                <div class="shop-box-right____btn">
                                    <a href="" class="btn btn--black">VIEW THIS PRODUCT</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Add Arrows -->
            <div class="swiper-button--move swiper-button-next"></div>
            <div class="swiper-button--move swiper-button-prev"></div>
        </div>
    </div>
    <div class="section-shop-the-look__btn">
        <div class="btn btn--black">VIEW PRODUCTS</div>
    </div>
</div>


{% schema %}
{
    "name": "product-shop",
    "settings": [
        {
            "id": "hi-06_header",
            "type": "text",
            "label": "Header",
            "default": "EXPLORE OUR OUTSTANDING FEATURES"
        },
        {
            "id": "hi-06_desc",
            "type": "textarea",
            "label": "Desc",
            "default": "We create category leading brand experiences that have meaning and add a value for our clients."
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "1 feature collection",
            "limit": 5,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "hi-2__img",
                    "label": "Image"
                },
                {
                    "type": "image_picker",
                    "id": "hi-2__img2",
                    "label": "Image"
                },
                {
                    "id": "hi-2__title",
                    "type": "text",
                    "label": "Title"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "hi-feature",
            "name": "product-shop"
        }
    ]
}
{% endschema %}