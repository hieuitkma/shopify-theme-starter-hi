{% assign hi-06_theme = '' %}
{% case section.settings.hi-06_theme %}
{% when 'default' %}
{% assign hi-06_theme = '' %}
{% when 'color' %}
{% assign hi-06_theme = 'hi-feature--color' %}
{% endcase %}

{% assign hi-06_reverse = '' %}
{% case section.settings.hi-06_reverse %}
{% when 'de' %}
{% assign hi-06_reverse = '' %}
{% when 'reverse' %}
{% assign hi-06_reverse = 'hi-feature--reverse' %}
{% endcase %}

<div class="hi-06-content {{hi-06_theme}} {{hi-06_reverse}}">
    <div class="hi-06-slides test">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                <div class="swiper-slide"
                    style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.9)), url({{block.settings.hi-06__img | img_url: 'master'}}); background-size: cover;">
                    <div class="hi-06__text">
                        <div class="hi-06__name">{{ block.settings.hi-06__name }}</div>
                        <div class="hi-06__time">{{ block.settings.hi-06__time }}</div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>

    <div class="hi-06__main">
        <div class="hi-06__header" style="color: {{section.settings.mau }}; font-family: {{section.settings.heading_font }};">{{section.settings.hi-06_header }}</div>
        <div class="hi-06__desc">{{section.settings.hi-06_desc }}</div>
        <div class="hi__btn">
            <a href="#" class="hi-btn hi__btn--primary">EXPLORE</a>
        </div>
    </div>
</div>


{% schema %}
{
    "name": "hi-feature-06",
    "class": "testthoi",
    "settings": [
    {
        "type": "collection",
        "id": "feature_collection",
        "label": "Featured collection"
     },
        {
            "type": "select",
            "id": "hi-06_reverse",
            "options": [
                { "value": "de", "label": "Default"},
                { "value": "reverse", "label": "Row-reverse"}
            ],
            "label": "Reverse"
        },
        {
            "type": "radio",
            "id": "hi-06_theme",
            "label": "Color",
            "options": [
                {
                    "value": "default",
                    "label": "Default"
                },
                {
                    "value": "color",
                    "label": "Color"
                }
            ],
            "default": "default"
        },
        {
            "id": "hi-06_header",
            "type": "text",
            "label": "Header",
            "default": "EXPLORE OUR OUTSTANDING FEATURES"
        },
        {
            "type": "color",
            "id": "mau",
            "label": "Color",
            "default": "#3d4246"
        },
        {
            "id": "hi-06_desc",
            "type": "textarea",
            "label": "Desc",
            "default": "We create category leading brand experiences that have meaning and add a value for our clients."
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "hi-feature-06",
            "limit": 5,
            "settings": [
                {
                    "id": "hi-06__name",
                    "type": "text",
                    "label": "Title",
                    "default": "This is name"
                },
                {
                    "id": "hi-06__time",
                    "type": "text",
                    "label": "Time",
                    "default": "20/08/1999"
                },
                {
                    "type": "image_picker",
                    "id": "hi-06__img",
                    "label": "Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "hi-feature",
            "name": "hi-feature 06"
        }
    ]
}
{% endschema %}