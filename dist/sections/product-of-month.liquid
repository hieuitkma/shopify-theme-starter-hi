<div class="section-product section__main">
    <div class="section__text">
        <div class="section__title">PRODUCT OF THE MONTH </div>
    </div>
    <div class="section-product-container">
        <div class="section-product-left">
            <div class="section-product-left__img">
                <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/products/La-Petite-Pochette-Bleu-01_400x.jpg?v=1527461034"
                    alt="">
                <img src="https://cdn.shopify.com/s/files/1/0011/6680/3007/products/La-Petite-Pochette-Noir-01_400x.jpg?v=1527461036"
                    alt="">
            </div>
        </div>

        <input hidden type="radio" id="p1" name="prOfMonth" value="male" checked>
        <input hidden type="radio" id="p2" name="prOfMonth" value="female">

        <div class="section-product-right">
            <div class="section-product__text">
                <div class="section-product__title">LA PETITE POCHETTE</div>
                <div class="section-product__price">$90</div>
            </div>
            <div class="section-product-color">
                <div class="section-product-color__title">Color: name</div>
                <div class="section-product-color__btn">
                    <label for="p1" class="btn-box btn-box-blue btn-box--active">
                        <div class="btn-box1 "></div>
                    </label>
                    <label for="p2" class="btn-box btn-box-black">
                        <div class="btn-box2"></div>
                    </label>
                </div>
            </div>
            <div class="section-product__size">
                <div>Size</div>
                <button type="button" class="btn--size">
                    <span class="btn--size-option">Large</span>
                    <svg class="Icon Icon--select-arrow" role="presentation" viewBox="0 0 19 12">
                        <polyline fill="none" stroke="currentColor" points="17 2 9.5 10 2 2" fill-rule="evenodd"
                            stroke-width="2" stroke-linecap="square"></polyline>
                    </svg>
                </button>
            </div>
            <div class="section-product__noti">Only 1 piece in stock!</div>
            <div class="section-product__btn">
                <a href class="btn btn--black">ADD TO CART</a>
                <a href class="btn btn--black">BUY IT NOW</a>
            </div>
            <div class="section__btn-secondary">
                <a href="#">View product details</a>
            </div>
        </div>
    </div>
</div> 


{% schema %}
{
    "name": "product-of-month",
    "settings": [
        {
            "id": "hi-06_header",
            "type": "text",
            "label": "Header",
            "default": "EXPLORE OUR OUTSTANDING FEATURES"
        },
        {
            "id": "hi-06_desc",
            "type": "textarea",
            "label": "Desc",
            "default": "We create category leading brand experiences that have meaning and add a value for our clients."
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "1 feature collection",
            "limit": 5,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "hi-2__img",
                    "label": "Image"
                },
                {
                    "type": "image_picker",
                    "id": "hi-2__img2",
                    "label": "Image"
                },
                {
                    "id": "hi-2__title",
                    "type": "text",
                    "label": "Title"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "hi-feature",
            "name": "product-of-month"
        }
    ]
}
{% endschema %}